<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rubik.rubikinteractive.bistonapp.BS_ARegistro3">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1.06"
                android:gravity="center"
                android:text="Mantenimiento de Control Sanitario"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="1.06"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Número de Estación y su Estado"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TableLayout
                        android:id="@+id/tl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>


            <LinearLayout
                android:id="@+id/ln_botones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_siguiente"
                        android:layout_width="258dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_siguiente"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_agrega"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Siguiente"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_volver"
                        android:layout_width="258dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_volver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_volver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Volver"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>