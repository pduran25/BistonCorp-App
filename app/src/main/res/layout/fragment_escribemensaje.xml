<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.rubik.rubikinteractive.bistonapp.BS_FEscribeMensaje">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lb_redactar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1.06"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Redactar mensaje administrador"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_asunto"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Asunto:"
                android:textAlignment="center"
                android:textSize="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_asunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="5"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/txt_mensaje"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.06"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Mensaje:"
                android:textAlignment="center"
                android:textSize="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_mensaje"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1.06"
                android:ems="10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="start|top"
                android:text=""
                android:inputType="textMultiLine" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_enviar"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt_clavea"
                android:layout_alignStart="@+id/logotipo"
                android:layout_alignLeft="@+id/logotipo"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                app:cardElevation="0dp"
                card_view:cardBackgroundColor="#F26524"
                card_view:cardCornerRadius="25dp">

                <RelativeLayout
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Enviar mensaje"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_cerrar"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt_clavea"
                android:layout_alignStart="@+id/logotipo"
                android:layout_alignLeft="@+id/logotipo"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                app:cardElevation="0dp"
                card_view:cardBackgroundColor="#F26524"
                card_view:cardCornerRadius="25dp">

                <RelativeLayout
                    android:id="@+id/btn_volve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textvolver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cerrar"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>