<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFnd"
    tools:context="com.rubik.rubikinteractive.bistonapp.com.rubik.rubikinteractive.bistonapp.BS_LoginUsuario">

    <TextView
        android:id="@+id/txt_nuevousuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_volve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Registrar Nuevo Usuario"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_volve"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_clavea"
        android:layout_alignStart="@+id/logotipo"
        android:layout_alignLeft="@+id/logotipo"
        android:layout_marginTop="34dp"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="#F26524"
        card_view:cardCornerRadius="25dp">

        <RelativeLayout
            android:id="@+id/btn_iniciar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Inicio Sesión"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/txt_clavea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_usuarioa"
        android:layout_alignStart="@+id/txt_usuarioa"
        android:layout_below="@+id/txt_usuarioa"
        android:layout_marginTop="15dp"
        android:ems="15"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logotipo"
        android:layout_centerHorizontal="true"
        android:text="Cliente"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/bs_logotipo" />

    <EditText
        android:id="@+id/txt_usuarioa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="15"
        android:hint="Usuario"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:text="" />
</RelativeLayout>
