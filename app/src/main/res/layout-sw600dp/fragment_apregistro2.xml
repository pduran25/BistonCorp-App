<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rubik.rubikinteractive.bistonapp.com.rubik.rubikinteractive.bistonapp.BS_ARegistro2">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1.06"
                android:gravity="center"
                android:text="Registro Area a Implementar"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="Area Implementada:"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="Plaga Tratada:"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="PoblaciÃ³n estimada:"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="Tratamiento:"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <Spinner
                        android:id="@+id/spArea"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spPlaga"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spPoblacion"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spTratamiento"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="294dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_agregar"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.06"
                        app:cardElevation="0dp"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_agregar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_agregar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Agregar"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_eliminar"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.06"
                        app:cardElevation="0dp"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_eliminar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_eliminar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Eliminar"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="1.06"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Listado de Areas a Implementar"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TableLayout
                        android:id="@+id/tl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>


            <LinearLayout
                android:id="@+id/ln_botones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.85"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_siguiente"
                        android:layout_width="258dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        app:cardElevation="2dp"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_siguiente"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_agrega"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Siguiente"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_volver"
                        android:layout_width="258dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/txt_clavea"
                        android:layout_alignStart="@+id/logotipo"
                        android:layout_alignLeft="@+id/logotipo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="#F26524"
                        card_view:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rlt_volver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_volver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Volver"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
